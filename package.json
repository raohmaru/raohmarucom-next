{
  "name": "raohmarucom",
  "title": "raohmaru.com website",
  "version": "3.0.0",
  "description": "Official website of Raul Parralejo",
  "main": "index.html",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all -l clean html css js assets minify",
    "clean": "del-cli dist/*",
    "html": "node build/html.js",
    "css": "cross-var cross-env NODE_ENV=production postcss src/css/*.css -d dist/css/ --ext $npm_package_version.min.css",
    "js": "copy-cli src/js/* dist/js/",
    "assets": "npm-run-all assets:*",
    "assets:meta": "copy-cli \"src/*.@(png|xml|txt|webmanifest|ico)\" dist/",
    "assets:img": "copy-cli src/img/** dist/img/",
    "minify": "npm-run-all -l minify:*",
    "minify:html": "html-minifier -c .htmlminifierrc --output-dir dist/ --input-dir dist/ --file-ext html",
    "minify:js": "cross-var terser src/js/main.js --compress --mangle --output dist/js/main.$npm_package_version.min.js",
    "serve": "node build/serve.js",
    "serve:dist": "cross-env NODE_ENV=production node build/serve.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raohmaru/raohmarucom-next.git"
  },
  "author": {
    "name": "Raohmaru",
    "url": "https://twitter.com/raulparralejo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raohmaru/raohmarucom-next/issues"
  },
  "homepage": "https://raohmaru.com",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "autoprefixer": "9.8.4",
    "copy": "0.3.2",
    "cross-env": "7.0.2",
    "cross-var": "1.1.0",
    "cssnano": "4.1.10",
    "del-cli": "3.0.1",
    "html-minifier": "4.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.32",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "6.7.0",
    "preprocess": "3.2.0",
    "terser": "4.8.0"
  },
  "devDependencies": {
    "local-web-server": "4.2.1"
  }
}
